{
  "name": "automation",
  "version": "0.1.0",
  "private": true,
  "description": "Automates Codex CLI login via Puppeteer and IMAP.",
  "type": "commonjs",
  "main": "codex-auto-login.js",
  "bin": {
    "codex-auto-login": "./codex-auto-login.js"
  },
  "scripts": {
    "start": "PUPPETEER_CACHE_DIR=.cache/puppeteer node codex-auto-login.js",
    "dev": "PUPPETEER_CACHE_DIR=.cache/puppeteer node codex-auto-login.js --headful",
    "login": "PUPPETEER_CACHE_DIR=.cache/puppeteer node codex-auto-login.js",
    "force-login": "node codex-auto-login.js --force",
    "browsers:install": "PUPPETEER_CACHE_DIR=.cache/puppeteer npx puppeteer browsers install chrome",
    "postinstall": "if [ \"$SKIP_BROWSER_INSTALL\" = \"1\" ]; then echo Skipping Chrome install; else npm run browsers:install; fi",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "codex",
    "automation",
    "puppeteer",
    "imap",
    "login"
  ],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "dotenv": "^17.2.3",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "imap-simple": "^5.1.0",
    "puppeteer": "^24.29.1"
  }
}
